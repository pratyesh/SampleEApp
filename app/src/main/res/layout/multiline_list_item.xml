    android:id="@+id/multiLineLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <!-- com.mikhaellopez.circularimageview.CircularImageView -->

 <!--    <com.pkmmte.circularimageview.CircularImageView
