<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ledexpo.android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_white"
    android:padding="10dp"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_default"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#D4F2FC"
            android:orientation="horizontal"
            android:padding="5dp" >

           <!--  <com.pkmmte.circularimageview.CircularImageView
                android:id="@+id/exhibitor_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/exhibitor_left_imageview_padding"
                app:border="true"
                app:border_color="@color/_gray_dark"
                app:border_width="1dp"
                app:shadow="true" /> -->

             <ImageView
                android:id="@+id/exhibitor_icon"
                android:layout_width="80dp"
                android:layout_height="80dp" />
             
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colorado State University" />

                <TextView
                    android:id="@+id/company_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000 5th Ave\nNew York,10028"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/company_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category Advanced Fules"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:weightSum="3" >

            <LinearLayout
                android:id="@+id/email_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meeting" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/web_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/web" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fev_icon_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/fev_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/star_big_off"
                    android:tag="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#EBEDEC"
            android:orientation="horizontal"
            android:weightSum="3" >

            <TextView
                android:id="@+id/details_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_image_margin"
                android:layout_weight="1"
                android:background="@drawable/ractangle_selected"
                android:gravity="center"
                android:text="Details" />

            <TextView
                android:id="@+id/notes_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_image_margin"
                android:layout_weight="1"
                android:background="@drawable/ractangle_unselected"
                android:gravity="center"
                android:text="Notes" />

            <TextView
                android:id="@+id/schedule_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_image_margin"
                android:layout_weight="1"
                android:background="@drawable/ractangle_unselected"
                android:gravity="center"
                android:text="Session" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/notes_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_image_margin"
                android:background="@drawable/notes_style"
                android:hint="Save your Notes"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/company_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_image_margin" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/notes_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_image_margin"
                android:layout_weight="1"
                android:background="@drawable/blue_border_gradient_box"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/_white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/notes_discard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_image_margin"
                android:layout_weight="1"
                android:background="@drawable/blue_border_gradient_box"
                android:gravity="center"
                android:text="Discard"
                android:textColor="@color/_white"
                android:visibility="gone" />
        </LinearLayout>

        <ListView
            android:id="@+id/schedule_speakers_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_image_margin"
            android:layout_marginRight="@dimen/list_image_margin"
            android:background="@color/_white"
            android:visibility="gone" >
        </ListView>
    </LinearLayout>

</ScrollView>